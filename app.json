{
  "expo": {
    "name": "MiMaps",
    "slug": "MiMaps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mimaps",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Esta app necesita acceso a tu ubicación para mostrar mapas y puntos de interés cercanos.",
        "NSLocationAlwaysUsageDescription": "Esta app necesita acceso a tu ubicación en segundo plano para funcionalidades avanzadas de mapas."
      },
      "config": {
        "googleMapsApiKey": "TU_API_KEY_IOS_AQUI"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "TU_API_KEY_ANDROID_AQUI"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-barcode-scanner",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir $(PRODUCT_NAME) usar tu ubicación.",
          "locationAlwaysPermission": "Permitir $(PRODUCT_NAME) usar tu ubicación.",
          "locationWhenInUsePermission": "Permitir $(PRODUCT_NAME) usar tu ubicación.",
          "isAndroidBackgroundLocationEnabled": false
        }
      ],
      
      // "expo-video",
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ],
      "expo-sqlite",
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
